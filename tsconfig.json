{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "noLib": false,
        "sourceMap": true,
        "noUnusedLocals": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true, // https://github.com/Azure/ms-rest-js/issues/367
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ]
        },
    },
    "include": [
        "src",
        "test",
        "extension.bundle.ts"
    ],
    "exclude": [
        "node_modules",
        "out",
        "typings",
        ".vscode-test",
    ]
}
